
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{game.game}} Review</title>
		<meta name="description" content="detailed reviews">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
			<h1>{{game.game}} Review</h1>
				<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<main>
		<div class="grid-container">
			<div class="div1">
		<img src="{{host}}/images/{{game.thumbnail}}" />
			</div>
			<div class="div2">
				<h2>{{game.game}}</h2>
			</div>
			<div class="div3">
		<p><span class="bold">Publisher:</span> <span>{{game.publisher}}</span></p> 
		<p><span class="bold">Release Year:</span> <span>{{game.release_year}}</span></p>
			</div>
		</div>
	</main>	
		<main style="padding-bottom: 0.5em; padding-top: 0.5em;">
			<form method="post" action="/gamereviews/reviewdetails/:id" enctype="multipart/form-data">
				<p>
					<label class="bold" for="review">Add Your Review</label><br />
					<textarea name="review" placeholder="Post a review" style="margin-top: 1vw"></textarea>
				</p>
				<p><input type="submit" value="Add Review"></p>
			</form>
		</main>
		<main>
			<h3>Reviews</h3>
			{{#each reviewtag}}
			<div class="grid-container_2">
				<div class="div1">
					<p><span class="bold">{{this.user}}</span></p>
					<p>{{this.review}}</p>
				</div>
				<div class="div2_2">
					<p><span class="bold">{{this.date}}</span></p>
				</div>
			</div>
			{{/each}}
		</main>
		<main>
			<button class="back button">Back</button>
		</main>
	</body>
</html>
